package main

import "zflow"

func main() {
	// get inputs
	var in = zflow.Inputs()
	
	data, ok := in.Map()
	if !ok {
		panic("could not read inputs")
	}
	input, _ := data["input"].Map()
	left, _ := input["left"].I64()
	right, _ := input["right"].I64()
	// some calculations
	total := left + right

	packet := map[string]int64{"sum": total}
	zflow.Send(packet)	
}
